{{#with data}}
<div id="login-page">
	<div id="login">
		<div class="container">
		
			<div class="row">
				<div class="col">
					<div class="d-flex justify-content-center">

					<form id="login-form" class="loginSignup" action="/verify-login">
					
						<!-- Email -->
						<div class="input-group input-group-lg">
					  		<span class="input-group-addon" id="sizing-addon1">E-mail</span>
					  		<input name="email" type="email" class="form-control" placeholder="example@mail.com" aria-describedby="sizing-addon1" required>
						</div>

						<!-- Password -->
						<div class="input-group input-group-lg">
							<span class="input-group-addon" id="sizing-addon1">Password</span>
							<input name="pwd" type="password" class="form-control" placeholder="" aria-describedby="sizing-addon1" required>
						</div>
					
						<!-- Submit -->
						<button type="submit" onclick="login()"  class="btn btn-primary btn-block">Login</button>


						{{#if ../loginError}}
							<p style="margin-top: 2rem; color: red;">{{../loginError}}</p>
						{{/if}}

					</form> <!-- .login-form -->

					</div>
				</div> <!-- .col -->
			</div> <!-- .row -->

			<div class="row">
				<div class="col toggleLoginSignup">
					<h4>Log in through Facebook</h4>
					<fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
					</fb:login-button>
				</div>
			</div>

			<div class="row">
				<div class="col toggleLoginSignup">
					<h5>Don't have an account? <a href="/signup">Sign Up</a></h5>
				</div>
			</div>

	</div> <!-- .container -->
	</div>
</div>
{{/with}}

